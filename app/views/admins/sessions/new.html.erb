<div class="row">
  <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title">Login Adminsitrativo</h3>
          </div>
          <div class="panel-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
                  <fieldset>
                    <div class="form-group">                        
                      <%= f.email_field :email, autofocus: true, placeholder: "email",class:"form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password, placeholder:"Password" , class:"form-control"  %>
                      </div>

                    <div class="form-group">
                        <input class="form-control" placeholder="Password" name="password" type="password" value="">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                        </label>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <label>
                        <%= f.check_box :remember_me %>Lembrar-me
                      </label>
                    <% end %>
                      <!-- Change this to a button or input when using this as a form -->
                    <div class="actions">
                      <%= f.submit "Entrar", class:"btn btn-lg btn-success btn-block"%>
                    </div>
                  </fieldset>
                <% end %>
              </form>
          </div>
      </div>
  </div>
</div>




